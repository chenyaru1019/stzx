<%@ Page Language="C#" AutoEventWireup="true" CodeFile="NewsView.aspx.cs" Inherits="OThinker.H3.Portal.Sheets.stzx.NewsView" EnableEventValidation="false" MasterPageFile="~/MvcSheet.master" %>
