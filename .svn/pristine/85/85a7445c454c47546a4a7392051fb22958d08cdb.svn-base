<form name="form">
    <div class="modal-header" style="border-top-right-radius: 10px;border-top-left-radius: 10px;background: #f8f8f8;">
        <button type="button" class="close" ng-show="Button_Close"
                data-dismiss="modal" aria-hidden="true" ng-click="cancel()">
            &times;
        </button>
        <h4 class="modal-title" id="myModalLabel" style="text-align: center;font-size: 23px;">
            <span ng-bind="Title"></span>
        </h4>
    </div>
    <div class="modal-body" style="text-align: center;padding: 50px;">
        <span ng-bind="Message" style='font-size: 17px;'></span>
    </div>
    <div class="modal-footer" style='padding: 0;border-bottom-right-radius: 10px; border-bottom-left-radius: 10px;'>
        <button type="button" class="btn" ng-click="cancel()" ng-show="Button_Cancel" style="border-radius: 0px;background-color: white;width: 50%;float: left;border-bottom-left-radius: 6px;line-height: 25px;">
            <span ng-bind="Button_Cancel_Text"></span>
        </button>
        <button type="button" class="btn btn-info" ng-click="ok()" ng-show="Button_OK" style='border-radius: 0px;margin-left: 0px;width: 50%;background-color:#FF993B;float: right;border-bottom-right-radius: 5px;border-color: #ff993b;line-height: 25px;'>
            <span ng-bind="Button_OK_Text"></span>
        </button>
    </div>
</form>